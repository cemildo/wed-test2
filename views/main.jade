html
  head
    link(href='//netdna.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css', rel='stylesheet')
    link(href='//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.min.css', rel='stylesheet') 
    script(src='javascripts/jQuery.1.10.2.js')
    script(src='javascripts/notify.js')
    script(src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js')
    script(src='javascripts/handlebar.js') 
    script(src='javascripts/moment.js')
    script(src='javascripts/Livestamp.js') 
    script(src='javascripts/main.js') 
    link(rel='stylesheet', type='text/css', href='stylesheets/main.css')
  body
    .container
      .row
        | 
        .col-md-12
            h2 
            |             
            #custom-search-input.col-md-6
              .col-md-12
                input#linkInput.form-control.input(type='text', placeholder='New Link')
            span.col-md-2
              button#addLink.btn.btn-default.btn-lg(type='submit',onclick='app.postUrl()') Post New Link  
            span.col-md-2 
              h3.text-right
                small.oldStyleFont  Hello, #{name}   
            span.col-md-2
              button.btn.btn-primary.btn-lg.oldStyleFont(type='submit',onclick='app.logout()') Logout
            |   
              
      .col-md-8
        p.lead     
          ul#savedList.list-group
      
      script#url-template(type='text/x-handlebars-template').
        <div style="margin:15px 5px" class="urlLinks  col-md-12" id="{{id}}">
           <div class="col-md-1">
              <div style="cursor: pointer;" onclick="app.increaseCounter({{id}})"><img width="20" src="images/up.png" ></div>
              <div id="point" class="box" style="text-align:center">{{ point }}</div> 
              <div style="cursor: pointer;" onclick="app.decreaceCounter({{id}})"><img width="20" src="images/down.png" ></div>
           </div>
           <div class="col-md-10">
            <div>
            {{ name}}  Website <a href="{{ url }}" > {{ url }} </a>
            </div>
            <div>Hey leute! Hab eine lustige Seite gefunden</div>
            <div>Created by <a href="">{{ owner }}</a> <span data-livestamp="{{ date }}"></span>
            </div>
           </div>
           <div class="col-md-1">
               <button style="float:right;display:none" class="btn btn-default btn-sm" type="submit" onclick="app.delete({{id}})">delete</button>
           </div> 
          </div>      
                

                