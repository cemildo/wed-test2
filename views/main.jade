html
  head
    link(href='//netdna.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css', rel='stylesheet')
    link(href='//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.min.css', rel='stylesheet') 
    script(src='//code.jquery.com/jquery-1.10.2.min.js')
    script(src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js')
    script(src='javascripts/handlebar.js') 
    script(src='javascripts/moment.js')
    script(src='javascripts/Livestamp.js') 
    script(src='javascripts/main.js') 
    link(rel='stylesheet', type='text/css', href='stylesheets/main.css')
  body
    .container
      .row
      |  
      span.input-group-btn.logout
        button.btn.btn-primary.btn-lg(type='submit') Logout
      |  
      .col-md-8
          h2 
          |             
          #custom-search-input.col-md-10
            .input-group
              input#linkInput.form-control.input-lg(type='text', placeholder='')
          span.col-md-2
            button#addLink.btn.btn-default.btn-lg(type='submit') Post New Link
      |       
      |       
      .col-md-8
        p.lead     
          ul#savedList.list-group
      
      script#url-template(type='text/x-handlebars-template').
        <div style="margin:15px 5px" class="urlLinks" id="{{id}}">
          <div  >
          {{ name}}  Website <a href="{{ url }}" > {{ url }} </a>
          </div>
          <div>Hey leute! Hab eine lustige Seite gefunden</div>
          <div>Created by <a href="">{{ owner }}</a> <span data-livestamp="{{ date }}"></span>
          <button style="float:right;display:none" class="btn btn-default btn-sm" type="submit" onclick="app.delete({{id}})">delete</button> 
          </div>
          </div>      
                

                